	{% extends 'layout.jinja2' %}

	{% block main %}

	<table class="table table-striped">
		<thead>
			<th>S.N.</th>
		  	<th>First Name</th>
		  	<th>Last Name</th>
		  	<th>Address</th>
		  	<th>Country</th>
		  	<th>Actions</th>
		</thead>

		{% for row in data: %}
		<tr>
			<td>{{ row.0 }}</td>
			<td>{{ row.1 }}</td>
			<td>{{ row.2 }}</td>
			<td>{{ row.3 }}</td>
			<td>{{ row.4 }}</td>
			<td>Edit | <a href = "{{url_for('delete_people',id=row.0)}}">Delete</a></td>		
		</tr>
		{% endfor %}

	</table>

	{% endblock %}