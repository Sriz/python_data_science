{% block main %}

<form class="form-horizontal" method="post" action = '{{url_for('add_people')}}'>
  <div class="form-group">
    <label for="exampleInputName2">First Name</label>
    <input type="text" class="form-control" id="first-name" placeholder="Ram" name="first-name">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">Last Name</label>
    <input type="text" class="form-control" id="last-name" placeholder="Shrestha" name="last-name">
  </div>
  <div class="form-group">
